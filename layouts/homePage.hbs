<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{{title}}</title>
    <link href="output.css" rel="stylesheet" />
    <meta name="description" content="{{description}}" />
    <script
      src="components/navigation.js"
      type="text/javascript"
      defer
    ></script>
  </head>

  <body>
    <navigation-component></navigation-component>
    <h1 class="text-grey">{{{title}}}</h1>
    <div
      class="bg-cover bg-center p-4"
      style="background-image: url({{hero-img}})"
    >
      <div class="md:container md:mx-auto p-4 bg-white opacity-75">
        <div class="mt-4 mb-6">
          <div class="mb-3 text-xl font-bold">{{{intro.header}}}</div>
          <div class="text-sm text-neutral-600">{{{intro.message}}}</div>
        </div>
      </div>
    </div>
    <hr />
    {{#if collections.projects.length}}
      <ul>
        {{#each collections.projects}}
          <li>
            <h3><a href="/{{link}}">{{title}}</a></h3>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No projects to show</p>
    {{/if}}

    <div class="flex p-4">
      <div class="container mx-auto bg-white">
        <p>something </p>
        <p>something else below</p>
      </div>
    </div>
  </body>
</html>